%nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
  %a.navbar-brand{:href => "#"} Navbar
  #navbar.collapse.navbar-collapse
    %ul.navbar-nav
      %li= link_to 'Home', root_url, class: 'nav-item nav-link'
      %li= link_to 'About', about_url, class: 'nav-item nav-link'
      - if logged_in?
        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Your Profile
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to 'You', user_url(current_user), class: 'dropdown-item'
            = link_to 'Edit', edit_user_url(current_user), class: 'dropdown-item'
            - if current_user.admin?
              .dropdown-divider
              = link_to "New Category", new_category_url, class: "dropdown-item"

        %li.nav-item.dropdown
          %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Blog
          .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
            = link_to 'Latest', article_url(Article.last), class: 'dropdown-item'
            = link_to 'Articles', articles_url, class: 'dropdown-item'
            = link_to 'Users', users_url, class: 'dropdown-item'
            = link_to 'New Article', new_article_url, class: 'dropdown-item'
            = link_to 'Categories', categories_url, class: 'dropdown-item'

  .navbar-collapse.collapse.order-3.dual-collapse2
    %ul.navbar-nav.ml-auto
      %li.nav-item
        - if logged_in?
          = link_to 'Logout', logout_url, class:'nav-link'
        - else
          = link_to 'Login', login_url, class:'nav-link'




